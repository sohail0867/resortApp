extends layout
block content
	h1 Customer Form
	p {{status}}
	form(ng-submit="submit()")
		input(type='text', ng-model="fields.fname" name='fname' placeholder='fname')
		input(type='text', ng-model="fields.lname" name='lname' placeholder='lname')
		input(type='text', ng-model="fields.phone" name='phone' placeholder='phone')
		input(type='text', ng-model="fields.address" name='address' placeholder='address')
		input(type='text', ng-model="fields.email" name='email' placeholder='email')
		input(type='text', ng-model="fields.state" name='state' placeholder='state')
		input(type='text', ng-model="fields.province" name='province' placeholder='province')
		input(type='text', ng-model="fields.zip" name='zip' placeholder='zip')
		input(type='submit' name='submit', value="Submit")
	